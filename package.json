{
  "name": "rollup-npm",
  "version": "1.0.6",
  "description": "use rollup to develop a npm package",
  "main": "dist/index.cjs.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslintfix": "eslint src/**/*.js --fix",
    "eslint": "eslint src/**/*.js",
    "stylelint": "stylelint src/styles/**/*.css",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "build": {
      "command": "node build",
      "env": {
        "BUILD": "production"
      }
    },
    "dev": {
      "command": "node build",
      "env": {
        "BUILD": "development"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhaotoday/rollup.git"
  },
  "keywords": [
    "npm",
    "rollup"
  ],
  "author": "zhaojintian",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zhaotoday/rollup/issues"
  },
  "homepage": "https://github.com/zhaotoday/rollup#readme",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "better-npm-run": "0.0.15",
    "cli-color": "^1.2.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "postcss-cssnext": "^2.11.0",
    "postcss-nested": "^2.0.2",
    "postcss-simple-vars": "^4.0.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.3",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0",
    "watch": "^1.0.2",
    "yargs": "^8.0.2"
  },
  "dependencies": {
    "query-string": "^4.3.4"
  }
}
